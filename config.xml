<?xml version='1.0' encoding='utf-8'?>
<widget id="org.belowaverage.webdows" version="6.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Webdows</name>
    <description>
        A dynamic Windows webulation.
    </description>
    <author email="devteam@belowaverage.org" href="https://belowaverage.org">
        below average
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="BackgroundColor" value="0xff000000" />
    <preference name="HideKeyboardFormAccessoryBar" value="true" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="ErrorUrl" value="webdows/resources/errorpages/generic.html" />
    <platform name="android">
        <allow-intent href="market:*" />
        <preference name="DefaultVolumeStream" value="media" />
        <icon density="ldpi" src="res/icon/android/icon-36-ldpi.png" />
        <icon density="mdpi" src="res/icon/android/icon-48-mdpi.png" />
        <icon density="hdpi" src="res/icon/android/icon-72-hdpi.png" />
        <icon density="xhdpi" src="res/icon/android/icon-96-xhdpi.png" />
        <icon density="xxhdpi" src="res/icon/android/icon-144-xxhdpi.png" />
        <icon density="xxxhdpi" src="res/icon/android/icon-192-xxxhdpi.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <platform name="windows">
        <preference name="windows-target-version" value="10.0" />
        <preference name="WindowsStoreIdentityName" value="51680krisdb2009.Webdows" />
        <preference name="WindowsStorePublisherName" value="krisdb2009" />
        <icon src="res/icon/windows/storelogo.png" target="StoreLogo" />
        <icon src="res/icon/windows/Square30x30Logo.png" target="Square30x30Logo" />
        <icon src="res/icon/windows/Square44x44Logo.png" target="Square44x44Logo" />
        <icon src="res/icon/windows/Square70x70Logo.png" target="Square70x70Logo" />
        <icon src="res/icon/windows/Square71x71Logo.png" target="Square71x71Logo" />
        <icon src="res/icon/windows/Square150x150Logo.png" target="Square150x150Logo" />
        <icon src="res/icon/windows/Square310x310Logo.png" target="Square310x310Logo" />
        <icon src="res/icon/windows/Wide310x150Logo.png" target="Wide310x150Logo" />
        <splash src="res/icon/windows/splashscreen.png" target="SplashScreen" />
    </platform>
    <engine name="android" spec="^6.3.0" />
    <engine name="ios" spec="^4.5.4" />
    <engine name="windows" spec="^5.0.0" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.3" />
    <plugin name="cordova-plugin-inappbrowser" spec="^1.7.2" />
</widget>
